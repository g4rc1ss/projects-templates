{
  "$schema": "http://json.schemastore.org/template",
  "author": "Asier",
  "classifications": [
    "Infraestructure",
    "Template",
    "C#"
  ],
  "identity": "Authentication",
  "name": "Asier Infraestructure",
  "description": "Crear Infraestructura",
  "shortName": "asier.infra.auth",
  "sourceName": "Template",
  "language": "C#",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "Authentication": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "identity",
          "displayName": "Microsoft Identity"
        }
      ],
      "defaultValue": "none",
      "description": "Tipo de auth para usar"
    },
    "UseIdentity": {
      "type": "computed",
      "value": "(Authentication == 'identity')"
    },
    "AuthNone": {
      "type": "computed",
      "value": "(Authentication == 'none')"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/*template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*idea/**/*"
      ],
      "modifiers": [
        {
          "condition": "(!UseIdentity)",
          "exclude": [
            "Entities/IdentityRoleEntity.cs",
            "Entities/IdentityUserEntity.cs",
            "Repository/IdentityUserPoc.cs",
            "IdentityDatabaseContext.cs"
            "HostedServices/MigrationHostedService.cs"
          ]
        }
      ]
    }
  ]
}