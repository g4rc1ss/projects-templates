{
  "$schema": "http://json.schemastore.org/template",
  "author": "Asier",
  "classifications": [
    "architecture"
  ],
  "identity": "functionality-structure",
  "name": "Estructura de funcionalidad de Vertical Slicing",
  "description": "Estructura para agregar una funcionalidad nueva",
  "shortName": "FunctionalityStructure",
  "sourceName": "Functionality",
  "language": "C#",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "Host": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "api",
          "description": "API"
        },
        {
          "choice": "grpc",
          "description": "GRPC"
        }
      ],
      "defaultValue": "api",
      "description": "Host to use"
    },
    "UseApi": {
      "type": "computed",
      "value": "(Host == 'api')"
    },
    "UseGrpc": {
      "type": "computed",
      "value": "(Host == 'grpc')"
    },
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0"
        }
      ],
      "defaultValue": "net9.0"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/*template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*idea",
        "*.sln",
        "**/Functionality/**/*"
      ],
      "modifiers": [
        {
          "condition": "UseApi",
          "exclude": [
            "**/Functionality.Grpc/**/*"
          ]
        },
        {
          "condition": "UseGrpc",
          "exclude": [
            "**/Functionality.API/**/*"
          ]
        }
      ]
    }
  ]
}