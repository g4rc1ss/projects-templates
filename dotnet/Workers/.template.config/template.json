{
  "$schema": "http://json.schemastore.org/template",
  "author": "Asier",
  "classifications": [
    "Architecture",
    "Template",
    "Csharp",
    "Workers"
  ],
  "identity": "worker-service",
  "name": "Asier Worker Services",
  "description": "Crear Worker Service",
  "shortName": "asier.worker",
  "sourceName": "WorkerTemplate",
  "language": "C#",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "solution",
    "editorTreatAs": "solution"
  },
  "symbols": {
    "UseRabbitMQ": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Rabbit MQ Handler",
      "defaultValue": false
    },
    "UseAzServiceBus": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Azure Service Bus Handler",
      "defaultValue": false
    },
    "UseMongodb": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Mongo Database",
      "defaultValue": false
    },
    "UsePostgres": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Postgres",
      "defaultValue": false
    },
    "UseRedis": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Redis",
      "defaultValue": false
    },
    "SqlDatabase": {
      "type": "computed",
      "value": "(UsePostgres)"
    }
  },
  "sources": [
    {
      "source": "../",
      "target": "./",
      "include": [
        "*editorconfig",
        "*csharpierrc.json",
        "Directory.Build.props",
        "RemoveUnusedDuplicatePackages.ps1"
      ]
    },
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/*template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*idea/**/*"
      ],
      "modifiers": [
        {
          "condition": "(!UseRabbitMQ)",
          "exclude": [
            "WorkerTemplate/Workers/RabbitMq/**/*",
            "Worker.AspireHost/RabbitMq/*"
          ],
          "rename": {
          }
        },
        {
          "condition": "(!UseAzServiceBus)",
          "exclude": [
            "WorkerTemplate/Workers/AzServiceBus/*"
          ],
          "rename": {
          }
        },
        {
          "condition": "(!UseMongodb)",
          "exclude": [
            "WorkerTemplate/Workers/Mongodb/*"
          ],
          "rename": {
          }
        },
        {
          "condition": "(!UsePostgres)",
          "exclude": [
            "WorkerTemplate/Workers/Postgres/*"
          ],
          "rename": {
          }
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "WorkerTemplate/Program.cs"
    }
  ],
  "postActions": [
    {
      "id": "build",
      "description": "Build project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet build'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "id": "editor",
      "description": "",
      "manualInstructions": [],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "0"
      },
      "continueOnError": true
    }
  ]
}